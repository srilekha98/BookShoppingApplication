<p id="notice"><%= notice %></p>

<h2>Books</h2>
<%= form_tag books_path, method: :get do %>
  <%= label_tag :filter_by_author%>
  <%= select_tag :author, options_for_select(Book.pluck(:author).uniq), include_blank: true %>
  <%= submit_tag "Filter" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Price</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.price %></td>
        <td><%= book.stock %></td>
        <td><%= link_to 'Show Book', book %></td>
        <% if book.stock !=0 %>
            <td><%= link_to 'Buy Book', new_transaction_path(:book_id => book.id) %></td>
        <%end %>
        <%if !current_user %>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%else %>
          <td><%= link_to 'Reviews', reviews_path(:book_id => book.id) %></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
