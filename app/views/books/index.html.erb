<p id="notice"><%= notice %></p>

<h2>Books</h2>
<%= form_tag books_path, method: :get do %>
  <%= label_tag :filter_by_author%>
  <%= select_tag :author, options_for_select(Book.pluck(:author).uniq), include_blank: true %>
  <%= submit_tag "Filter" %>
<% end %>
<%= form_tag books_path, method: :get do %>
  <%= label_tag :filter_by_average_rating%>
  <%= select_tag :rating, options_for_select([1,2,3,4,5]), include_blank: true %>
  <%= submit_tag "Filter" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.price %></td>
        <td><%= book.stock %></td>
        <td><%= book.average_rating %></td>
        <td><%= link_to 'Reviews', reviews_path(:book_id => book.id) %></td>
        <% if book.stock !=0 and current_user%>
          <td>
            <%= form_for @order_item, remote: true do |f|%>
              <%= f.hidden_field :book_id, :value => book.id %>
              <%= f.number_field :quantity, :value => 1, :min =>  1%>
              <%= f.submit "Add to Cart"%>
            <% end %>
          </td>
            <td><%= link_to 'Give Review', new_review_path(:book_id => book.id) %></td>
        <%end %>
        <%if admin_user %>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Delete', delete_book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else %>
        <td></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_user %>
  <%= link_to 'New Book', new_book_path %>
<% end %>
