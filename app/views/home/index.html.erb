<p id="notice"><%= notice %></p>

<% if current_user %>
  Logged in as <%= current_user.name %>
  <nav>
    <ul>
      <li><%= link_to "My Profile", user_path(current_user.id) %> </li>
      <li><%= link_to "All Books", books_path %> </li>
      <li><%= link_to "All Reviews", reviews_path %> </li>
      <li><%= link_to "My Reviews", reviews_path(:user_id => current_user.id) %> </li>
      <li><%= link_to "My Shopping History", transactions_path(current_user.id) %> </li>
      <li><%= link_to "Log Out", logout_path %></li>
    </ul>
  </nav>

  <% elsif admin_user%>

  <nav>
    <ul>
      <li><%= link_to "My Profile", admin_path(admin_user.id) %></li>
      <li><%= link_to "All Books", books_path %></li>
      <li><%= link_to "All Users", users_path %></li>
      <li><%= link_to "All Reviews", reviews_path %></li>
      <li><%= link_to "Shopping History", transactions_path %></li>
      <li><%= link_to "Log Out", admin_logout_path %></li>
    </ul>
  </nav>
<% else %>
  <nav>
    <ul>
      <li><%= link_to "Sign Up", signup_path %> </li>
      <li><%= link_to "Log In", login_path %></li>
      <li><%= link_to "Login as Admin", admin_login_path %> </li>
    </ul>
  </nav>
  <% end %>