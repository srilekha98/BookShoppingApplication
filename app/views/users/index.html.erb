<p id="notice"><%= notice %></p>

<% if admin_user %>
  <h1>Users</h1>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Cc num</th>
        <th>Phone num</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.cc_num %></td>
          <td><%= user.phone_num %></td>
          <td><%= link_to 'Show', user %></td>
            <%if admin_user %>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Delete', delete_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%else %>
            <td></td>
             <%end %>
          <%end  %>
        </tr>
    </tbody>
  </table>

  <br>

  <%= link_to 'Create New User', new_user_path %>

<% else %>
  <h2>You have no access to this page! Only Admins can access this page!</h2>

<% end %>

<%= link_to 'Back', root_url %>