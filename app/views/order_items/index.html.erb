<p id="notice"><%= notice %></p>

<h1>Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Book</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Unit price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order_id %></td>
        <td><%= order_item.book_id %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.total %></td>
        <td><%= order_item.unit_price %></td>
        <td><%= order_item.user_id %></td>
        <td><%= link_to 'Show', order_item %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%= form_for order_item, remote: true do |f| %>
          <%= f.hidden_field :book_id, :value => order_item.book.id %>
          <%= f.number_field :quantity, :value => order_item.quantity.to_i %>
          <%= f.submit "Update Card "%>
          <%= link_to "Remove Items", order_item_path(order_item), method: :delete, remote: true%>
        <% end %>
        <h2>Subtotal: <%= order_item.total %></h2>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>Your current card value has a subtotal of: <%= current_order.subtotal %> </h3>
<%#= link_to 'New Order Item', new_order_item_path %>
