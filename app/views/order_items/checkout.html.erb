<p id="notice"><%= notice %></p>
<h2>Check out</h2>


<table class="table">
  <thead>
  <tr>
    <th>Price</th>
    <th>Quantity</th>
    <th>Total Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% i = 0 %>
  <% @order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.unit_price %></td>
      <td><%= order_item.quantity %></td>
      <td><%= order_item.total %></td>
      <% i = i+1 %>
    </tr>
  <% end %>
  </tbody>
</table>
<br/>
<table class="table">
  <thead>
  <tr>
    <th>Total amount to be paid: <%= @total_amount %>
    <th colspan="2"></th>
  </tr>
  </thead>
</table>

<br>
<%= link_to 'Place Order', place_order_path %>
<br>